# Environnement (development, production, test)
NODE_ENV=production

# Configuration du serveur
PORT=3000

# Configuration de la base de données PostgreSQL
DB_HOST=your-production-db-host
DB_PORT=5432
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_NAME=titingre_db

# TypeORM - Mode migrations (synchronize DÉSACTIVÉ car on utilise les migrations)
DB_SYNCHRONIZE=false
DB_LOGGING=false

# Clé secrète JWT (générer une nouvelle clé pour la production !)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS - Origines autorisées (domaines de votre frontend)
ALLOWED_ORIGINS=https://titingre.com,https://www.titingre.com

# Firebase Configuration (si utilisé)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email

# Twilio Configuration (si utilisé)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Cloudflare R2 Configuration (stockage de fichiers - recommandé pour réseaux sociaux)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY_ID=your-r2-access-key-id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
CLOUDFLARE_R2_BUCKET_NAME=titingre-media
CLOUDFLARE_R2_PUBLIC_URL=https://media.titingre.com

# Provider de stockage (local, cloudinary, r2)
STORAGE_PROVIDER=r2

# URL de l'application (pour les URLs publiques des fichiers en stockage local)
APP_URL=https://api.titingre.com
